package crypto

import (
	"crypto/rand"
	"crypto/rsa"
	"crypto/sha512"
)

func RSAEncrypt(data []byte, key *rsa.PublicKey) ([]byte, error) {
	return rsa.EncryptOAEP(sha512.New(), rand.Reader, key, data, nil)
}

func RSADecrypt(data []byte, key *rsa.PrivateKey) ([]byte, error) {
	return rsa.DecryptOAEP(sha512.New(), nil, key, data, nil)
}
